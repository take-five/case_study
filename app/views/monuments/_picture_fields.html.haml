= f.inputs :name => "Picture" do
  = f.input :name, :as => :string, :required => false
  = f.input :description, :as => :text, :input_html => { :rows => 4 }, :required => false
  = f.input :image, :as => :file, :required => true
  = link_to_remove_association 'Remove picture', f, :wrapper_class => 'inputs'